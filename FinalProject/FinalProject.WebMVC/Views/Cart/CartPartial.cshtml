@using FinalProject.Domain.Models.Carts;

@model List<CartItemViewModel>
@{

}

<a href="#" class="dropdown-toggle lnk-cart" data-toggle="dropdown">
	<div class="items-cart-inner">
		<div class="basket">
			@if (Model != null && Model.Any())
			{
				<div class="basket-item-count"><span class="count">@Model.Sum(s => s.Quantity)</span></div>
				<div class="total-price-basket"> <span class="lbl">Shopping Cart</span> <span class="value">$@Model.Sum(s => s.Quantity * s.Price)</span> </div>
			}
			else
			{
				<div class="total-price-basket"> <span class="lbl">Shopping Cart</span> </div>
			}
		</div>
	</div>
</a>
@if (Model != null && Model.Any())
{
	<ul class="dropdown-menu">
		<li sstyle="overflow-y: scroll">
			@foreach (var item in Model)
			{
				<div class="cart-item product-summary">
					<div class="row">
						<div class="col-xs-4">
							<div class="image"> <a href="detail.html"><img src="@item.Image" alt=""></a> </div>
						</div>
						<div class="col-xs-7">
							<h3 class="name"><a href="index8a95.html?page-detail">@item.ProductName</a></h3>
							<div class="price">$@item.Price</div>
						</div>
						<div data-name="@item.ProductName" data-id="@item.ProductId" class="col-xs-1 action delete remove-item"> <a href="#"><i class="fa fa-trash"></i></a> </div>

					</div>
				</div>
			}
			<div class="clearfix"></div>
			<hr>
			<div class="clearfix cart-total">
				<div class="pull-right"> <span class="text">Sub Total :</span><span class='price'>$@Model.Sum(s => s.Quantity * s.Price)</span> </div>
				<div class="clearfix"></div>
				<a href="/checkout" class="btn btn-upper btn-primary btn-block m-t-20">Checkout</a>
			</div>
		</li>
	</ul>
}



