	<div class="container">
		<div class="sign-in-page" style="margin: 0 auto; width: 50%; padding: 40px 40px">
			<div class="row">
				<!-- create a new account -->
				<div class="create-new-account">
					<h4 class="checkout-subtitle">Create a new account</h4>
					<p class="text title-tag-line">Create your new account.</p>
					<form action="/account/register" method="post" class="register-form outer-top-xs" role="form">
						@Html.AntiForgeryToken()
						<div class="form-group">
							<label asp-for="Email" class="info-title" for="exampleInputEmail2">Email Address <span>*</span></label>
							<input asp-for="Email" type="text" class="form-control unicase-form-control text-input" id="exampleInputEmail2">
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="UserName" class="info-title" for="exampleInputEmail1">Name <span>*</span></label>
							<input asp-for="UserName" type="text" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="Password" class="info-title" for="exampleInputEmail1">Password <span>*</span></label>
							<input asp-for="Password" type="password" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label asp-for="ConfirmPassword" class="info-title" for="exampleInputEmail1">Confirm Password <span>*</span></label>
							<input asp-for="ConfirmPassword" type="password" class="form-control unicase-form-control text-input" id="exampleInputEmail1">
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<button type="submit" class="btn-upper btn btn-primary checkout-page-button">Sign Up</button>
					</form>
				</div>
			</div><!-- /.row -->
		</div><!-- /.sigin-in-->
